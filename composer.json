{
    "name": "nativephp/microphone",
    "description": "Microphone recording plugin for NativePHP Mobile - audio recording with pause/resume support",
    "type": "nativephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "NativePHP",
            "email": "support@nativephp.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "nativephp/mobile": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "NativePHP\\Microphone\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "NativePHP\\Microphone\\MicrophoneServiceProvider"
            ]
        },
        "nativephp": {
            "manifest": "nativephp.json"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
